@charset "UTF-8";
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
}
/* 全局变量 */
:root {
  /* 主题色 */
  --primary-color: #a40035;
  --primary-light: rgba(164, 0, 53, 0.15);
  --primary-dark: #8a002c;
  /* 功能色 */
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
  --info-color: #1890ff;
  /* 中性色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-weak: #999999;
  --text-disabled: #cccccc;
  /* 背景色 */
  --bg-primary: #ffffff;
  --bg-secondary: #f5f5f5;
  --bg-third: #eeeeee;
  /* 边框色 */
  --border-color: #e8e8e8;
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  /* 圆角 */
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 12rpx;
  --radius-full: 9999rpx;
  /* 阴影 */
  --shadow-sm: 0 2rpx 4rpx rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4rpx 8rpx rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 8rpx 16rpx rgba(0, 0, 0, 0.16);
}
/* 通用类 */
.container {
  padding: var(--spacing-md);
}
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  -webkit-box-shadow: var(--shadow-sm);
          box-shadow: var(--shadow-sm);
}
.flex {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.flex-between {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.flex-center {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.text-primary {
  color: #a40035;
}
.text-secondary {
  color: var(--text-secondary);
}
.text-weak {
  color: var(--text-weak);
}
/* 按钮样式 */
.btn-primary {
  background: #a40035;
  color: #fff;
  border: none;
  border-radius: var(--radius-full);
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}
.btn-primary:active {
  background: var(--primary-dark);
}