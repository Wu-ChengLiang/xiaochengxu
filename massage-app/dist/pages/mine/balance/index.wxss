.balance-page {
  min-height: 100vh;
  background: #f5f5f5;
}
.balance-page .balance-card {
  background: -webkit-linear-gradient(315deg, #a40035, #d4004f);
  background: linear-gradient(135deg, #a40035, #d4004f);
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}
.balance-page .balance-card::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}
.balance-page .balance-card .card-content {
  position: relative;
  z-index: 1;
}
.balance-page .balance-card .card-content .label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
  display: block;
}
.balance-page .balance-card .card-content .amount-wrapper {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: baseline;
      -ms-flex-align: baseline;
          align-items: baseline;
  margin-bottom: 40rpx;
}
.balance-page .balance-card .card-content .amount-wrapper .currency {
  font-size: 36rpx;
  color: #fff;
  margin-right: 8rpx;
}
.balance-page .balance-card .card-content .amount-wrapper .amount {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}
.balance-page .balance-card .card-content .action-btn {
  display: -webkit-inline-flex;
  display: -ms-inline-flexbox;
  display: inline-flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 12rpx 28rpx;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
}
.balance-page .balance-card .card-content .action-btn text {
  color: #fff;
  font-size: 28rpx;
  margin-left: 8rpx;
}
.balance-page .transaction-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
  min-height: calc(100vh - 300rpx);
}
.balance-page .transaction-section .section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: block;
}
.balance-page .transaction-section .empty {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  padding: 100rpx 0;
}
.balance-page .transaction-section .empty .empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}
.balance-page .transaction-section .transaction-list {
  max-height: calc(100vh - 400rpx);
}
.balance-page .transaction-section .transaction-list .transaction-item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.balance-page .transaction-section .transaction-list .transaction-item:last-child {
  border-bottom: none;
}
.balance-page .transaction-section .transaction-list .transaction-item .left {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.balance-page .transaction-section .transaction-list .transaction-item .left .info {
  margin-left: 20rpx;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.balance-page .transaction-section .transaction-list .transaction-item .left .info .description {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.balance-page .transaction-section .transaction-list .transaction-item .left .info .time {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.balance-page .transaction-section .transaction-list .transaction-item .right {
  text-align: right;
}
.balance-page .transaction-section .transaction-list .transaction-item .right .amount {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}
.balance-page .transaction-section .transaction-list .transaction-item .right .amount.income {
  color: #52c41a;
}
.balance-page .transaction-section .transaction-list .transaction-item .right .amount.expense {
  color: #333;
}
.balance-page .transaction-section .transaction-list .transaction-item .right .balance {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.balance-page .transaction-section .transaction-list .loading,
.balance-page .transaction-section .transaction-list .no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #999;
}