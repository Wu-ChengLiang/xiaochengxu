.mine-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.mine-page .header-section {
  padding: 32rpx 32rpx 0;
  background-color: #ffffff;
}
.mine-page .header-section .user-card {
  background: -webkit-linear-gradient(315deg, #a40035 0%, #8a002c 100%);
  background: linear-gradient(135deg, #a40035 0%, #8a002c 100%);
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  color: #fff;
}
.mine-page .header-section .user-card .user-info {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}
.mine-page .header-section .user-card .user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}
.mine-page .header-section .user-card .user-info .phone {
  font-size: 36rpx;
  font-weight: 500;
}
.mine-page .header-section .user-card .user-info .login-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  color: #fff;
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 160rpx;
}
.mine-page .header-section .user-card .user-info .login-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.6);
}
.mine-page .header-section .user-card .user-info .login-btn:active {
  opacity: 0.8;
}
.mine-page .header-section .user-card .user-info .login-btn.button-loading, .mine-page .header-section .user-card .user-info .login-btn.button-disabled {
  opacity: 0.6;
}
.mine-page .header-section .user-card .balance-info {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 28rpx;
  background: transparent;
  border: none;
  padding: 12rpx 0;
  margin: 0;
  color: #fff;
  cursor: pointer;
}
.mine-page .header-section .user-card .balance-info:active {
  opacity: 0.8;
}
.mine-page .header-section .user-card .balance-info .balance-amount {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 8rpx;
}
.mine-page .menu-section {
  margin-top: 24rpx;
  background-color: #ffffff;
}
.mine-page .menu-section .menu-item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.mine-page .menu-section .menu-item:active {
  background-color: #f5f5f5;
}
.mine-page .menu-section .menu-item:last-child {
  border-bottom: none;
}
.mine-page .menu-section .menu-item .menu-left {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  gap: 24rpx;
}
.mine-page .menu-section .menu-item .menu-left .menu-title {
  font-size: 32rpx;
  color: #333333;
}
.mine-page .menu-section .menu-item .menu-right {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  gap: 16rpx;
}
.mine-page .menu-section .menu-item .menu-right .badge {
  background-color: #a40035;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 40rpx;
  text-align: center;
}
.mine-page .bind-phone-content {
  padding: 16rpx 0;
}
.mine-page .bind-phone-content .bind-phone-tips {
  display: block;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 32rpx;
  text-align: center;
}
.mine-page .bind-phone-content .phone-input {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #f9f9f9;
}
.mine-page .bind-phone-content .phone-input:focus {
  border-color: #a40035;
  background-color: #fff;
}
.mine-page .bind-phone-content .phone-input:disabled {
  opacity: 0.6;
  background-color: #f5f5f5;
}